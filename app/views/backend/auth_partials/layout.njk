<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Admin | {{ config.siteName }}</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/vendor/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/vendor/Ionicons/css/ionicons.min.css">
  <link rel="stylesheet" href="/backend/css/AdminLTE.min.css">
  <link rel="stylesheet" href="/backend/css/skins/_all-skins.min.css">
  {% block style %}{% endblock %}
</head>
<body class="hold-transition skin-blue layout-top-nav">
  <div class="wrapper">
    {% include "backend/auth_partials/header.njk" %}
    <div class="content-wrapper">
      <div class="container">
          <section class="content">
          {% if(error.length > 0) %}            
            <div class="callout callout-danger notifications">
              <p>{{ error[0].msg }}</p>
            </div>            
          {% endif %}

          {% if(vErrors.length > 0) %}            
            <div class="callout callout-danger notifications">
              <p>{{ vErrors[0].msg }}</p>
            </div>            
          {% endif %}
          
          {% if success.length > 0 %}
            <div class="callout callout-success notifications">
              {{ success }}
            </div>
          {% endif %}
          
          {% block body %}{% endblock %}
        </section>
      </div>
    </div>
    <footer class="main-footer">
      <div class="container">
        <strong>Copyright &copy; 2021-2022 <a href="/backend">{{config.siteName}}</a>.</strong> All rights reserved.
      </div>
    </footer>
  </div>
  <script src="/vendor/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
  <script src="/vendor/fastclick/lib/fastclick.js"></script>
  <script src="/backend/js/adminlte.min.js"></script>
  <script src="/backend/js/demo.js"></script>
  <script>
  setTimeout(function(){
      $('.notifications').slideUp('slow');
      var cells =  $('.notifications');
      setTimeout(function(){
        cells.remove();
      },1000);
    },5000);
  </script>
  {% block script %}{% endblock %}
</body>